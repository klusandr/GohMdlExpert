<vb:BaseView x:Class="GohMdlExpert.Views.HumanskinSaveView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vb="clr-namespace:WpfMvvm.Views;assembly=WpfMvvm"
             xmlns:local="clr-namespace:GohMdlExpert.Views" xmlns:viewmodels="clr-namespace:GohMdlExpert.ViewModels"
             xmlns:controlsView="clr-namespace:WpfMvvm.Views.Controls;assembly=WpfMvvm" xmlns:trees="clr-namespace:GohMdlExpert.Views.Trees"
             d:DataContext="{d:DesignInstance Type=viewmodels:HumanskinSaveViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <vb:BaseView.Resources>
        <local:SaveParameterVisibilityConverter x:Key="SaveParameterVisibilityConverter"/>
    </vb:BaseView.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".5*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <CheckBox Content="Load only mod" IsChecked="{Binding IsLoadOnlyMod}" Margin="5"/>
            <controlsView:TreeView DataContext="{Binding Tree}" Grid.Row="1">
                <controlsView:TreeView.ItemTemplate>
                    <HierarchicalDataTemplate ItemsSource="{Binding Items}">
                        <trees:ResourceLoadFileTreeItemView/>
                    </HierarchicalDataTemplate>
                </controlsView:TreeView.ItemTemplate>
            </controlsView:TreeView>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Content="Add directory" Command="{Binding AddDirectoryCommand}" Margin="5"/>
                <Button Content="Remove directory" Command="{Binding RemoveDirectoryCommand}" Margin="5" Grid.Column="1"/>
            </Grid>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <DataGrid x:Name="DirectoryItemsDataGrid" ItemsSource="{Binding CurrentDirectoryItems}" AutoGenerateColumns="False" CanUserResizeRows="False" CanUserReorderColumns="False"
                      GridLinesVisibility="None" RowHeaderWidth="0" Margin="5" LoadingRow="DataGridLoadingRowHandler" Sorting="DataGridSortingHandler"
                      Grid.Column="1" CanUserSortColumns="True">
                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell" BasedOn="{StaticResource {x:Type DataGridCell}}">
                        <Setter Property="BorderThickness" Value="0 1"/>
                        <Setter Property="Focusable" Value="False"/>
                        <Setter Property="ToolTip" Value="{Binding ToolTip}"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Status}" Value="Good">
                                <Setter Property="Background" Value="{DynamicResource StatusGoodBrush}"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Status}" Value="Warning">
                                <Setter Property="Background" Value="{DynamicResource StatusWarningBrush}"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Status}" Value="Error">
                                <Setter Property="Background" Value="{DynamicResource StatusErrorBrush}"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Ignore}" Value="True">
                                <Setter Property="Background" Value="{DynamicResource DarkBackgroundBrush}"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.CellStyle>

                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="Name" Width="*" SortMemberPath="Text" SortDirection="Ascending">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="1">
                                    <Image Source="{Binding Icon}" Width="20"/>
                                    <TextBlock Text="{Binding Text}"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    
                    <DataGridTemplateColumn Header="Save action" Width="200">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding SaveAction}" Visibility="{Binding Path='', Converter={StaticResource SaveParameterVisibilityConverter}}" Margin="1"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="Ignore" Width="50">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding Ignore, UpdateSourceTrigger=PropertyChanged}" Visibility="{Binding Path='', Converter={StaticResource SaveParameterVisibilityConverter}}" HorizontalAlignment="Center" VerticalAlignment="Center" Focusable="False" Margin="1"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <TextBox Text="{Binding HumanskinName, UpdateSourceTrigger=LostFocus}" KeyDown="HumanskinNameTextBoxKeyDownHandler" Margin="5 0" Grid.Row="1"/>
        </Grid>
        
        <StackPanel Style="{StaticResource DialogButtonStackPanel}" Grid.Row="1" Grid.Column="1">
            <Button Content="Save" Command="{Binding SaveCommand}"/>
            <Button Content="Cancel" Command="{Binding CancelCommand}"/>
        </StackPanel>
    </Grid>
</vb:BaseView>
