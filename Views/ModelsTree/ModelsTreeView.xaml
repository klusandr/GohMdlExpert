<baseviews:BaseView x:Class="GohMdlExpert.Views.ModelsTree.ModelsOverviewTreeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:baseviews="clr-namespace:WpfMvvm.Views;assembly=WpfMvvm"
             xmlns:local="clr-namespace:GohMdlExpert.Views.ModelsTree" 
             xmlns:overviewmodels="clr-namespace:GohMdlExpert.ViewModels.ModelsTree.OverviewModels" 
             d:DataContext="{d:DesignInstance Type=overviewmodels:ModelsOverviewTreeViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition Height=".3*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Обозреватель содержимого"/>
        <TreeView Grid.Row="1" ItemsSource="{Binding Items}" MinWidth="150">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Items}">
                    <local:ModelsTreeItemView DataContext="{Binding}"/>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
    </Grid>
</baseviews:BaseView>
