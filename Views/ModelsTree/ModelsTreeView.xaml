<baseviews:ViewMvvmBase x:Class="GohMdlExpert.Views.ModelsTree.ModelsTreeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:GohMdlExpert.Views.ModelsTree"
    xmlns:baseviews="clr-namespace:MvvmWpf.Views;assembly=MvvmWpf" 
    xmlns:modelstree="clr-namespace:GohMdlExpert.ViewModels.ModelsTree" 
    d:DataContext="{d:DesignInstance Type=modelstree:ModelsTreeViewModel}"
    mc:Ignorable="d" 
    d:DesignHeight="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Content="Загрузить" Command="{Binding LoadModelsCommand}" Margin="5" Padding="5"/>
        <TreeView Grid.Row="1" Padding="0 0 30 0" ItemsSource="{Binding Items}" MinWidth="150" SelectedItemChanged="TreeView_SelectedItemChanged">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Items}">
                    <local:ModelsTreeItemView DataContext="{Binding}"/>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
    </Grid>
</baseviews:ViewMvvmBase>
