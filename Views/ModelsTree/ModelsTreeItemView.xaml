<UserControl x:Class="GohMdlExpert.Views.ModelsTree.ModelsTreeItemView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GohMdlExpert.Views.ModelsTree" 
             xmlns:modelstree="clr-namespace:GohMdlExpert.ViewModels.ModelsTree" 
             d:DataContext="{d:DesignInstance Type=modelstree:ModelsTreeItemViewModel}"
             mc:Ignorable="d"
             MouseDoubleClick="OnMouseDoubleClick"
             ToolTip="{Binding ToolTip}">
    <UserControl.Style>
        <Style TargetType="UserControl">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsApproved}" Value="True">
                    <Setter Property="Background" Value="#99008000"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Style>

    <StackPanel Orientation="Horizontal">
        <Image Source="{Binding IconSource}" Width="20"/>
        <TextBlock Text="{Binding HeaderText}"/>
    </StackPanel>
</UserControl>
