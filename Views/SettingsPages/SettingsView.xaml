<bv:BaseView x:Class="GohMdlExpert.Views.SettingsPages.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:bv="clr-namespace:WpfMvvm.Views;assembly=WpfMvvm"
             xmlns:local="clr-namespace:GohMdlExpert.Views.SettingsPages" 
             xmlns:settingspages="clr-namespace:GohMdlExpert.ViewModels.SettingsPages" 
             d:DataContext="{d:DesignInstance Type=settingspages:SettingsViewModel}"
             mc:Ignorable="d" 
             MinHeight="400" MinWidth="600"
             d:DesignHeight="450" d:DesignWidth="800">
    <TabControl x:Name="_tabControl" TabStripPlacement="Left">
        <TabItem Header="Game directory" Padding="5">
            <local:GamePathSettingsPageView/>
        </TabItem>
        <TabItem Header="Coming soon" Padding="5">
            <TextBlock Text="1"/>
        </TabItem>
    </TabControl>
</bv:BaseView>
