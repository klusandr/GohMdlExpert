<local:SettingsPageView x:Class="GohMdlExpert.Views.SettingsPages.OutputModSettingsPageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:WpfMvvm.Controls;assembly=WpfMvvm"
             xmlns:local="clr-namespace:GohMdlExpert.Views.SettingsPages"
             xmlns:settingspages="clr-namespace:GohMdlExpert.ViewModels.SettingsPages"
             d:DataContext="{d:DesignInstance Type=settingspages:OutputModSettingsPageViewModel}"
                        mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Margin="5">
            <HeaderedContentControl Header="Output mod path:">
                <DockPanel>
                    <Button Content="Browse..." Command="{Binding SetModCommand}" DockPanel.Dock="Right" Margin="5"/>
                    <TextBox Text="{Binding ModPath, Mode=OneWay}" IsReadOnly="True" Margin="5"/>
                </DockPanel>
            </HeaderedContentControl>
            <CheckBox Content="Enable" IsChecked="{Binding IsEnable}" Margin="0 5"/>
            <CheckBox Content="Load on start" IsChecked="{Binding LoadOnStart}" Margin="0 5"/>
        </StackPanel>

        <StackPanel Style="{StaticResource DialogButtonStackPanel}" VerticalAlignment="Bottom">
            <Button Content="Approve" Command="{Binding ApproveCommand}"/>
        </StackPanel>
    </Grid>
</local:SettingsPageView>
