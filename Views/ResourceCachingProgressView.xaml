<UserControl x:Class="GohMdlExpert.Views.ResourceCachingProgressView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GohMdlExpert.Views" xmlns:viewmodels="clr-namespace:GohMdlExpert.ViewModels"
             Width="500"
        d:DataContext="{d:DesignInstance Type=viewmodels:ResourceCachingProgressViewModel}"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <TextBlock FontSize="14" Grid.Row="1" Margin="10 5">
                <Run Text="Files cached: "/>
                <Run Text="{Binding FilesCount, Mode=OneWay}"/>
            </TextBlock>

            <TextBlock Grid.Row="2" Margin="10 5" Visibility="{Binding IsEnd, Converter={StaticResource BooleanToVisibilityConverterRevers}}" TextTrimming="CharacterEllipsis">
                <Run Text="Current file: "/>
                <Run Text="{Binding CurrentFile, StringFormat='.\\',  Mode=OneWay}"/>
            </TextBlock>

            <TextBlock Text="Done." Grid.Row="2" Margin="10" FontSize="16" d:Visibility="Collapsed" Visibility="{Binding IsEnd, Converter={StaticResource BooleanToVisibilityConverter}}"/>

            <ProgressBar Value="{Binding ProgressBar.Value, Mode=OneWay}" Maximum="{Binding ProgressBar.Maximum, Mode=OneWay}" Height="20" Grid.Row="3" Grid.ColumnSpan="2"/>

            <Button Content="Cancel" Command="{Binding CancelCommand}" Padding="5" Grid.Row="4" Grid.ColumnSpan="2"/>
        </Grid>
    </Grid>
</UserControl>
